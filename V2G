    <script>
        // 【請在這裡填入你的 4 個問卷網址】
        // 記得用引號包起來，並用逗號隔開
        const formUrls = [
            "https://docs.google.com/forms/d/e/1FAIpQLSf67M5-ZgZYD4KqAQbFkIoCj26E5guX52Ro2Fw1CllrGtOikw/viewform?usp=header版本一", 
            "https://docs.google.com/forms/d/e/1FAIpQLScmdFximVYuq7l1cXRFcIXozCHkBma4oFcT8o5Ks7m9T6ihjg/viewform?usp=header版本二",
            "https://docs.google.com/forms/d/e/1FAIpQLSc7Rb_BX8rV3RETTGJIS0sCmnKtoERPjIRM0QRL1zJqIyxdLQ/viewform?usp=header版本三",
            "https://docs.google.com/forms/d/e/1FAIpQLScNpUqMnhcOm4Icnw7x4yCVZjVRZSnvxiwVgJ4zjN9ftT0eOw/viewform?usp=header版本四" 
        ];

        function redirectToRandomForm() {
            // 隨機選出 0, 1, 2, 3 其中一個數字
            const randomIndex = Math.floor(Math.random() * formUrls.length);
            const selectedUrl = formUrls[randomIndex];
            
            // 執行跳轉
            window.location.replace(selectedUrl);
        }

        // 網頁載入後立即執行
        window.onload = redirectToRandomForm;
    </script>
