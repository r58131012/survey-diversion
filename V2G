        }
        .message {
            padding: 40px;
            background: white;
            border-radius: 16px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.1); /* 讓陰影更立體一點 */
            max-width: 400px;
            width: 80%;
        }
        h2 { margin-top: 0; color: #2c3e50; }
